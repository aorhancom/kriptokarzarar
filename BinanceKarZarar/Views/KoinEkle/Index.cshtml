@{
    ViewBag.Title = "Koin Ekle";
    ViewBag.pTitle = "Koin Ekle";
    ViewBag.pageTitle = "Koin Ekle";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Farklı Marketten Alınan Koinlerinizi Ekleyebilirsiniz.</h4>
                <p class="card-title-desc">
                    Koin cüzdanınıza yeni coin eklemek istediğiniz de veya satış yapmak istediğinizde bu sayfada kolaylıkla işlem gerçekleştirebilirsiniz.
                </p>
                
                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label">Koin Seç</label>
                                    <div class="col-sm-4">
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected="">Koin Seçiniz</option>
                                            <option value="1">Bitcoin | BTC</option>
                                            <option value="2">Ethereum | ETH</option>
                                            <option value="3">Avalanche | AVAX</option>
                                        </select>
                                    </div>
                                </div>
                <div class="row mb-3">
                    <label for="example-text-input" class="col-sm-2 col-form-label">Adet</label>
                    <div class="col-sm-4">
                        <input class="form-control" type="text" placeholder="Alınan koin sayısını giriniz." id="example-text-input">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="example-search-input" class="col-sm-2 col-form-label">Adet Başına Fiyat</label>
                    <div class="col-sm-4">
                        <input class="form-control" type="search" placeholder="Koin adet başına fiyatını yazınız." id="example-search-input">
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label for="example-search-input" class="col-sm-2 col-form-label">İşlem Tipi</label>
                    <div class="col-sm-4">
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                            <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked="" data-com.bitwarden.browser.user-edited="yes">
                            <label class="btn btn-outline-secondary" for="btnradio1">Alış</label>

                            <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" data-com.bitwarden.browser.user-edited="yes">
                            <label class="btn btn-outline-secondary" for="btnradio2">Satış</label>
                        </div>
                    </div>    
                </div>
                <div class="row mb-3">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-10">
                        <button type="button" class="btn btn-success waves-effect waves-light">
                            <i class="ri-check-line align-middle me-2"></i> İşlemi Kaydet
                        </button>
                    </div>
                </div>
                </div>
                </div>
            </div> <!-- end col -->
        </div>
<!-- end row -->

