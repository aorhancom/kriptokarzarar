@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";
}

<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Anasayfa") class="">
                                                <img src="~/assets/images/koyu_logo.png" alt="" height="20" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/new_logo.png" alt="" height="20" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>

                                        <h4 class="font-size-18 mt-4">Hoşgeldiniz !</h4>
                                        <p class="text-muted">Sisteme ulaşmak için giriş yapınız.</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <form class="" action=@Url.Action("Index", "AuthLogin") method="post">

                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                <label for="username">Username</label>
                                                <input type="text" class="form-control" name="Username" id="username" placeholder="Kullanıcı adınızı yazınız.">
                                            </div>

                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                <label for="userpassword">Password</label>
                                                <input type="password" class="form-control" name="Password" id="password" placeholder="Parola yazınız.">
                                            </div>

                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="customControlInline">
                                                <label class="form-check-label" for="customControlInline">Hatırla</label>
                                            </div>

                                            <div class="mt-4 text-center">
                                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Giriş Yap</button>
                                            </div>

                                        </form>

                                  
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p>Hesabınız yok mu ? Hemen <a href=@Url.Action("Index", "AuthRegister") class="fw-medium text-primary"> Kayıt Ol </a> </p>
                                        <p>
                                            ©
                                            <script>document.write(new Date().getFullYear())</script> Proje Çalışması. <i class="mdi mdi-heart text-danger"></i> Binance
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>
