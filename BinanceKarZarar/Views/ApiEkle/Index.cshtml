@{
    ViewBag.Title = "Binance Api Ekle";
    ViewBag.pTitle = "Binance Api Ekle";
    ViewBag.pageTitle = "Api Ekle";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

@using BinanceKarZarar.Models
@model BinanceKeyModel

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Binance Koinlerinizin Kar Zarar Durumu için API Bilgileriniz</h4>
                <p class="card-title-desc">
                    Binance API de sadece <code class="highlighter-rouge">okuma</code> özelliği açık olmasına dikkat ediniz.
                    Alım-satım ve para çekme özelliği <code class="highlighter-rouge">kapalı</code> olmayan API sisteme <code class="highlighter-rouge">eklenmez</code>.
                </p>

                <form class="" action=@Url.Action("Index", "ApiEkle") method="post">

                    <div class="row mb-3">
                        <label for="example-text-input" class="col-sm-2 col-form-label">API Key</label>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" name="ApiKey" value="@Model.ApiKey" placeholder="Binance sitesinden oluşturduğunuz API Keyi yazınız." id="example-text-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="example-search-input" class="col-sm-2 col-form-label">API Secret Key</label>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" name="ApiSecretKey" value="@Model.ApiSecretKey" placeholder="Binance sitesinden oluşturduğunuz API Secret Keyi yazınız." id="example-search-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-2">
                        </div>
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success waves-effect waves-light">
                                <i class="ri-check-line align-middle me-2"></i> Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </div> <!-- end col -->
</div>
<!-- end row -->

<!-- JAVASCRIPT -->
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>

<!-- bs custom file input plugin -->
<script src="~/assets/libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>

<script src="~/assets/js/pages/form-element.init.js"></script>

<script src="~/assets/js/app.js"></script>
